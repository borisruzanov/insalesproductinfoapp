<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:f="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--    <androidx.constraintlayout.widget.ConstraintLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content">-->


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dialog_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sixtyDpMargin"
        android:text="@string/update_product_detail_text"
        android:textColor="@color/black"
        android:textSize="@dimen/largeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--        <androidx.appcompat.widget.AppCompatImageView-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:src="@drawable/ic_swap"-->
    <!--            android:id="@+id/layout_swap"-->
    <!--            app:layout_constraintTop_toTopOf="parent"-->
    <!--            app:layout_constraintEnd_toEndOf="parent"-->
    <!--            app:layout_constraintLeft_toRightOf="@id/dialog_heading"-->
    <!--            android:layout_margin="@dimen/sixtyDpMargin"-->
    <!--            android:visibility="gone"-->
    <!--            />-->

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/layout_swap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eightDpMargin"
        android:src="@drawable/ic_swap"
        android:text="@string/edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dialog_heading"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/wrapper_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/sixtyDpMargin"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/insales_product_detail_dialog_cancel_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_heading">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/first_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/product_title_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/largeText" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dialog_heading">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/insales_product_title_input_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="start"
                        android:hint="@string/text_hint_text"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:isScrollContainer="true"
                        android:maxLines="15" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:text="@string/product_short_description_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/largeText" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/insales_product_title_input_field">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/insales_product_short_desc_input_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="start"
                        android:hint="@string/text_hint_text"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:isScrollContainer="true"
                        android:maxLines="5" />
                </com.google.android.material.textfield.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/product_full_description_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/largeText" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/get_description_text_view1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/get_description_text"
                        android:textColor="@color/primary_positive_color"
                        android:textSize="@dimen/mediumText"
                        android:visibility="gone" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/insales_product_title_input_field">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/insales_product_full_desc_input_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:gravity="start"
                        android:hint="@string/text_hint_text"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:isScrollContainer="true"
                        android:maxLines="15" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/second_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_gray"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/keywords_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/eightDpMargin"
                    android:visibility="gone"
                    tools:listitem="@layout/keyword_item_row_design" />

                <androidx.cardview.widget.CardView
                    style="@style/CardView.Light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/defaultDpMargin"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/products_images_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/defaultDpMargin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/defaultDpMargin"
                            android:text="@string/quick_edit_hint_text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/largeText" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/eightDpMargin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/eightDpMargin"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/product_title_text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/mediumText" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/title_clear_brush_view"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/cleaning_brush" />
                        </LinearLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/eightDpMargin"
                            android:fillViewport="true">

                            <org.apmem.tools.layouts.FlowLayout
                                android:id="@+id/dynamic_insales_title_textview_wrapper"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                f:layoutDirection="rtl" />
                        </ScrollView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/eightDpMargin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/eightDpMargin"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/product_short_description_text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/mediumText" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/short_desc_clear_brush_view"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@drawable/cleaning_brush" />
                        </LinearLayout>

                        <org.apmem.tools.layouts.FlowLayout
                            android:id="@+id/dynamic_insales_short_description_textview_wrapper"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/eightDpMargin"
                            f:layoutDirection="rtl" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/eightDpMargin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/eightDpMargin"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/product_full_description_text"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/mediumText" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/full_desc_clear_brush_view"
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/cleaning_brush" />
                            </LinearLayout>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/get_description_text_view"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="@string/get_description_text"
                                android:textColor="@color/primary_positive_color"
                                android:textSize="@dimen/mediumText"
                                android:visibility="gone" />
                        </LinearLayout>


                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/eightDpMargin"
                            android:fillViewport="true">

                            <org.apmem.tools.layouts.FlowLayout
                                android:id="@+id/dynamic_insales_full_description_textview_wrapper"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                f:layoutDirection="rtl" />
                        </ScrollView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/insales_product_detail_dialog_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/cancel_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/insales_product_detail_dialog_update_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wrapper_layout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/insales_product_detail_dialog_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/update_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/insales_product_detail_dialog_cancel_btn"
        app:layout_constraintTop_toBottomOf="@id/wrapper_layout" />
    <!--    </androidx.constraintlayout.widget.ConstraintLayout>-->
</androidx.constraintlayout.widget.ConstraintLayout>
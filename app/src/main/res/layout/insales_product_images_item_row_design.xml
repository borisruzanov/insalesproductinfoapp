<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/sixtyDpMargin"
        android:src="@drawable/ic_close"
        android:elevation="4dp"
        android:id="@+id/insales_product_remove_view"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:background="@drawable/border"
        android:layout_margin="@dimen/eightDpMargin"
        android:padding="@dimen/small"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:id="@+id/insales_product_image_view"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/loader"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/insales_product_image_edit_btn"
            app:backgroundTint="@color/primary_positive_color"
            android:text="@string/edit_text"
            android:textSize="@dimen/largeText"
            android:textAllCaps="false"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>